[user]
    name = Sune Simonsen
    email = sune@we-knowhow.dk
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    st = status
    di = diff
    co = checkout
    ci = commit
    br = branch
    sta = stash
    cdiff = diff --cached
    hist = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
    changes = log --pretty='%s'
    cb = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
    stc = diff --name-only --diff-filter=U
    cbr = !git branch --merged | grep -v "master" | xargs -n 1 git branch -d
    fixup = "!sh -c '(git diff-files --quiet || (echo Unstaged changes, please commit or stash with --keep-index; exit 1)) && COMMIT=$(git rev-parse $1) && git commit --fixup=$COMMIT && git rebase -i --autosquash $COMMIT~1' -"
    zpush = !git-zpush
    memento = !git for-each-ref --sort=-committerdate --count=20 --format='%(refname:short)' refs/heads/
[pull]
    # Only pull branches that have been set up to track a remote branch.
    default = current
[push]
    # Only push branches that have been set up to track a remote branch.
    default = current
[core]
	excludesfile = ~/.gitignore
[github]
	user = sunesimonsen
[magithub]
	online = false
[magithub "status"]
	includeStatusHeader = false
	includePullRequestsSection = false
	includeIssuesSection = false
[init]
	defaultBranch = main
