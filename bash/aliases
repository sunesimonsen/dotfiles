# Console
alias ls='ls --color=auto'
alias ll='ls -laGh'
alias ..='cd ..'

# clipboard
alias copy="xclip"
alias paste="xclip -o"

# GIT 
alias g='git'
alias gst='git status'
alias gaa='git add .'
alias gp='git pull'
alias gpr='git pull --rebase'
alias gc='git commit'
alias gcm='git commit -m'

# Navigation 
alias cdp='cd ~/Projects'
alias cdh='cd ~'

alias fn='find . -name '
 
alias open="xdg-open"

# Places
alias projects="cd ~/Projects"
alias downloads="cd ~/Downloads"
alias desktop="cd ~/Desktop"

# pacman 
function pss { 
    pacman -Ss "$1" | less -FXRS
}

alias psi='pacman -Si ' 

# Bundle 
alias be='bundle exec'
alias ber='bundle exec rake'
alias server='python -m SimpleHTTPServer'

# Alias management
alias ar='source $DOT_FILES_DIR/bash/aliases'
alias ae='$EDITOR $DOT_FILES_DIR/bash/aliases'
