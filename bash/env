# Colors on OS X
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

if [ -d ~/bin ]
then
    export PATH=$PATH:~/bin
fi

export TERM='xterm-256color'

# export PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
export PATH=./node_modules/.bin:$PATH
export PATH=$DOTFILES/bin:$PATH
export PATH=~/.local/bin:$PATH

export HISTIGNORE="^rm:--force"

if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

export BASH_SILENCE_DEPRECATION_WARNING=1

export DOCKER_IMAGES_DEBUG=true
export GUIDE_ELASTICSEARCH=true

eval "$(rbenv init -)"

if [ -z "$FNM_DIR" ]
then
    eval "$(fnm env --multi)"
fi

export FIGLET_FONTDIR=/Users/ssimonsen/Code/figlet-fonts

export GOPATH=~/Code/go-tools
export PATH=$GOPATH/bin:$PATH

#export APOLLO_GRAPH_VARIANT_DEV=ssimonsen
