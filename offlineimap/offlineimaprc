[general]
accounts = Personal,Work
pythonfile = ~/.config/dotfiles/offlineimap/offlineimap.py
usecompression = yes

[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote
presynchook = /Users/ssimonsen/Maildir/.notmuch/hooks/pre-sync
postsynchook = notmuch new

[Repository Personal-Local]
type = Maildir
localfolders = ~/Maildir/Personal

[Repository Personal-Remote]
type = IMAP
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
remotehost = imap.one.com
remoteuser = sune@we-knowhow.dk
remotepasseval = get_password_keychain("imap.one.com", "sune@we-knowhow.dk")
realdelete = no

[Account Work]
localrepository = Work-Local
remoterepository = Work-Remote
synclabels = yes
labelsheader = X-Keywords
presynchook = /Users/ssimonsen/Maildir/.notmuch/hooks/pre-sync
postsynchook = notmuch new

[Repository Work-Local]
type = GmailMaildir
localfolders = ~/Maildir/Work
trashfolder = gmail.Trash
nametrans = lambda foldername: re.sub('^gmail', '[Gmail]', foldername)

[Repository Work-Remote]
type = Gmail
sslcacertfile = /usr/local/etc/openssl/cert.pem
remoteuser = ssimonsen@zendesk.com
